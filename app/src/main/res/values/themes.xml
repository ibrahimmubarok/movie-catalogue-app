<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieCatalogue" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorDarkPurple</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MovieCatalogueCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="elevation">@dimen/dimens_0dp</item>
        <item name="cardBackgroundColor">@color/colorMediumPurple</item>
        <item name="cardElevation">@dimen/dimens_0dp</item>
        <item name="cardCornerRadius">@dimen/dimens_6dp</item>
    </style>

    <style name="MovieCatalogueTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/colorDarkGrey</item>
        <item name="tabIndicator">@android:color/transparent</item>
        <item name="android:background">@color/colorDarkPurple</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="MovieCatalogueTabLayout.TextAppearance" parent="android:TextAppearance.Widget.TabWidget">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>
    
    <style name="MovieCatalogueToolbar" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="navigationIcon">@drawable/ic_back</item>
    </style>

    <style name="MovieCatalogueRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/colorCream</item>
        <item name="colorControlActivated">@color/colorCream</item>
    </style>
    
</resources>